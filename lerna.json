{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
      },
      "message": "chore(release): release new versions for components",
      "yes": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/test/**", "**/stories/**", "**/*.md", "**/*.json"]
}
